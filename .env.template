# Tree of Life - Autonomous Agent System
# Environment Configuration Template
# Copy to .env and fill in your values

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# ============================================================================
# KAFKA EVENT BUS CONFIGURATION
# ============================================================================
# Single broker (local development)
KAFKA_BROKERS=localhost:9092

# Multiple brokers (production)
# KAFKA_BROKERS=kafka-1:29092,kafka-2:29092,kafka-3:29092

# Security (production)
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_USERNAME=admin
# KAFKA_SASL_PASSWORD=<secure-password>
# KAFKA_SSL_CA_CERT=/etc/secrets/ca-cert.pem

# Kafka client configuration
KAFKA_CLIENT_ID=tree-of-life-orchestrator
KAFKA_CONNECTION_TIMEOUT=10000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_COMPRESSION=snappy

# Topic configuration
KAFKA_TOPIC_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=2
KAFKA_RETENTION_MS=6912000000
KAFKA_MIN_INSYNC_REPLICAS=2

# ============================================================================
# gRPC SERVER CONFIGURATION
# ============================================================================
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_RECEIVE_MESSAGE_LENGTH=4194304
GRPC_MAX_SEND_MESSAGE_LENGTH=4194304
GRPC_KEEPALIVE_TIME=30000
GRPC_KEEPALIVE_TIMEOUT=10000

# TLS Configuration (production)
GRPC_TLS_ENABLED=false
# GRPC_TLS_ENABLED=true
# GRPC_TLS_CERT_PATH=/etc/secrets/server.crt
# GRPC_TLS_KEY_PATH=/etc/secrets/server.key
# GRPC_TLS_CA_PATH=/etc/secrets/ca.crt

# ============================================================================
# REWOO ORCHESTRATION CONFIGURATION
# ============================================================================
REWOO_MAX_ITERATIONS=3
REWOO_PLANNING_TIMEOUT=30000
REWOO_EXECUTION_TIMEOUT=60000
REWOO_SYNTHESIS_TIMEOUT=30000
REWOO_ERROR_RETRY_ATTEMPTS=3
REWOO_ERROR_RETRY_DELAY=1000

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
# Planning Agent
PLANNING_AGENT_ENABLED=true
PLANNING_AGENT_MODEL=gpt-4
PLANNING_AGENT_TEMPERATURE=0.3

# Execution Agent
EXECUTION_AGENT_ENABLED=true
EXECUTION_AGENT_MAX_PARALLEL_TASKS=5
EXECUTION_AGENT_RETRY_POLICY=exponential_backoff

# Reflexion Agent
REFLEXION_AGENT_ENABLED=true
REFLEXION_AGENT_MODEL=gpt-4
REFLEXION_AGENT_CRITIQUE_DEPTH=2

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Linear API
LINEAR_API_KEY=<your-linear-api-key>
LINEAR_TEAM_ID=0a42fa2d-5df2-45f5-a1c2-1dd78749fe93

# GitHub API
GITHUB_TOKEN=<your-github-token>
GITHUB_OWNER=Garrettc123
GITHUB_REPO=tree-of-life-system

# Notion API
NOTION_API_KEY=<your-notion-api-key>
NOTION_DATABASE_ID=<your-notion-database-id>

# OpenAI API
OPENAI_API_KEY=<your-openai-api-key>
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_INTERVAL=10000

# Logging
LOG_FORMAT=json
LOG_DESTINATION=console,file
LOG_FILE_PATH=logs/application.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# Tracing
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=0.1
# TRACING_JAEGER_ENDPOINT=http://jaeger:6831

# ============================================================================
# DATABASE CONFIGURATION (Future)
# ============================================================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tree_of_life
DB_USER=postgres
DB_PASSWORD=<secure-password>
DB_POOL_SIZE=20
DB_TIMEOUT=30000

# ============================================================================
# SECURITY
# ============================================================================
# API Keys
API_KEY_HEADER=X-API-Key
API_KEY=<secure-random-key>

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================================
# Deployment environment
DEPLOYMENT_ENV=development
# DEPLOYMENT_ENV=staging
# DEPLOYMENT_ENV=production

# Kubernetes
K8S_ENABLED=false
K8S_NAMESPACE=default
K8S_POD_NAME=tree-of-life-app

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<your-aws-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret>
AWS_MSK_BROKER_NODES=3

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_KAFKA_EVENT_BUS=true
FEATURE_GRPC_GATEWAY=true
FEATURE_REWOO_ORCHESTRATION=true
FEATURE_AUTONOMOUS_AGENTS=true
FEATURE_MULTI_REGION=false
FEATURE_KUBERNETES_DEPLOYMENT=false

# ============================================================================
# DEBUG & DEVELOPMENT
# ============================================================================
DEBUG_ENABLED=true
DEBUG_VERBOSE=false
DEBUG_KAFKA_MESSAGES=false
DEBUG_GRPC_CALLS=false
DEBUG_AGENT_DECISIONS=true

# Development mode features
DEV_MODE=true
DEV_MOCK_AGENTS=false
DEV_SKIP_VALIDATION=false
DEV_PERFORMANCE_MONITORING=true
