{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "node orchestrator/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "path": "/health",
    "interval": 60,
    "timeout": 10
  },
  "services": [
    {
      "name": "orchestrator",
      "healthcheck": {
        "path": "/health",
        "interval": 60
      }
    }
  ]
}
